{
  "location": "variables.location",
  "resource_group": "variables.resource_group",
  "install_from": "headnode",
  "admin_user": "variables.ad_admin",
  "variables": {
    "image": "OpenLogic:CentOS:7.6:latest",
    "hpc_image": "OpenLogic:CentOS-HPC:7.6:latest",
    "location": "westeurope",
    "resource_group": "ad_demo",
    "vnet_resource_group": "variables.resource_group",
    "ad_image": "MicrosoftWindowsServer:WindowsServer:2012-R2-Datacenter:latest",
    "ad_domain": "MyDomain.local",
    "ad_admin": "hpcadmin",
    "win_password": "mypassword@1234"
  },
  "vnet": {
    "resource_group": "variables.vnet_resource_group",
    "name": "hpcvnet",
    "address_prefix": "10.2.0.0/20",
    "subnets": {
      "admin": "10.2.1.0/24",
      "viz": "10.2.2.0/24",
      "netapp": "10.2.3.0/24",
      "compute": "10.2.4.0/22"
    }
  },
"storage": {
    "hpcnetappad": {
      "type": "anf",
      "subnet": "netapp",
      "joindomain": "MyDomain.local",
      "ad_server": "adnode",
      "ad_password": "mypassword@1234",
      "ad_username": "hpcadmin",
      "pools": {
        "anfpool": {
          "size": 10,
          "service_level": "Premium",
          "volumes": {
            "anfvolume1": {
              "size": 4,
	      "type": "cifs",
              "mount": "/data"
            }
          }
        }
      }
    }
  },
  "resources": {
    "adnode": {
      "type": "vm",
      "public_ip": "true",
      "password": "variables.win_password",
      "vm_type": "Standard_D8s_v3",
      "image": "variables.ad_image",
      "subnet": "admin",
      "tags": [
	"ad_server"
	]
    },
    "headnode": {
      "type": "vm",
      "vm_type": "Standard_D8s_v3",
      "public_ip": true,
      "image": "variables.image",
      "subnet": "compute",
      "tags": [
 	"cndefault",
        "loginnode",
        "localuser",
        "disable-selinux",
	"join_domain",
        "netapp-client"
      ]
    }
  },
  "install": [
    {
      "script": "disable-selinux.sh",
      "tag": "disable-selinux",
      "sudo": true
    },
    {
      "script": "cndefault.sh",
      "tag": "cndefault",
      "sudo": true
    },
    {
      "script": "localuser.sh",
      "args": [
        "$(<hostlists/tags/nfsserver)"
      ],
      "tag": "localuser",
      "sudo": true
    },
    {
      "script": "join_domain.sh",
      "args": [
        "variables.ad_domain",
        "variables.ad_admin",
        "variables.win_password",
        "$(<hostlists/tags/ad_server)"
      ],
      "tag": "join_domain",
      "sudo": true
    },
    {
      "script": "auto_netappfiles_mount_anfpool.sh",
      "tag": "netapp-client",
      "sudo": true
    }
  ]
}
